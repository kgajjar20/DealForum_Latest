@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using DealForumLibrary.Models.AdminAreaModels;
@model DealForumLibrary.Models.AdminAreaModels.AdminForgotPasswordModel;
@{
    Layout = null;
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin ForgotPassword - DealForum</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link href="@Url.Content("~/AdminLTE/plugins/fontawesome-free/css/all.min.css")" rel="stylesheet" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="@Url.Content("~/AdminLTE/plugins/icheck-bootstrap/icheck-bootstrap.min.css")">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content("~/AdminLTE/dist/css/adminlte.min.css")">
    
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link href="~/css/Custom/Override.css" rel="stylesheet" />

    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="@Url.Content("~/AdminLTE/plugins/jquery/jquery.min.js")"></script>
    <!-- Bootstrap 4 -->
    <script src="@Url.Content("~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <!-- AdminLTE App -->
    <script src="@Url.Content("~/AdminLTE/dist/js/adminlte.min.js")"></script>

    <script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js")" asp-append-version="true"></script>
    <script src="@Url.Content("~/lib/jquery-validation/dist/additional-methods.js")"></script>

    <!-- Sticky Notes -->
    <link href="@Url.Content("~/css/Custom/stickynotes.css")" rel="stylesheet" />
    <script src="@Url.Content("~/js/Custom/stickynotes.js")"></script>

    <script src="@Url.Content("~/js/Custom/Common.js")"></script>

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a><b>Deal </b>Forum</a>
        </div>
        <!-- /.login-logo -->
        <div class="card" id="login">

            <div class="card-body login-card-body">
                <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>
                <form asp-area="Admin" asp-action="ForgotPassword" asp-controller="Home" id="frmLogin" method="post">
                    <div class="mb-3">
                        <div class="input-group">
                            <input asp-for="Email" type="email" class="form-control" title="Email" placeholder="Email">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Email" class="error invalid-feedback-display"></span>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <button type="submit" title="Request new password" class="btn btn-primary btn-block">Request new password</button>
                        </div>
                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <a href="@Url.Action("Login","Home",new { Area ="Admin"})">Login</a>
                </p>
            </div>
        </div>
    </div>


    <div id="_NotificationShare">
        <partial name="_Notifications" />
    </div>
</body>
</html>